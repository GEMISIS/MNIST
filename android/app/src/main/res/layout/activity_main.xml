<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <gemisis.mnist.views.EaselView
        android:id="@+id/easel_view"
        android:layout_width="match_parent"
        android:layout_height="420dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easel_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/prediction_text"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/prediction_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="?"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easel_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="@string/confidence_text"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/confidence_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="?"
        android:textSize="30sp" />

</RelativeLayout>